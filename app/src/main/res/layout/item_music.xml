<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/music_item"
                android:background="@color/backgroundWhite"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:weightSum="1">

    <ImageView
        android:id="@+id/music_item_thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@color/backgroundLightGrey"
        android:layout_centerVertical="true"
        android:contentDescription="@string/music_album_desc"/>

    <LinearLayout
        android:id="@+id/music_item_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center_vertical"
        android:layout_toEndOf="@id/music_item_thumbnail"
        android:orientation="vertical">

        <TextView
            android:id="@+id/music_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/textBlack"
            tools:text="Music title here"/>

        <TextView
            android:id="@+id/music_item_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textGrey"
            tools:text="Artist here..."/>

    </LinearLayout>

</RelativeLayout>