<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editor_result_ask_to_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/selectorVideoSelected"
    android:orientation="vertical"
    android:padding="3dp">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:src="@drawable/editor_result_home_question" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/editor_result_ask_to_home_yes"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/editor_result_yes" />

        <ImageView
            android:id="@+id/editor_result_ask_to_home_no"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/editor_result_no" />
    </LinearLayout>

</LinearLayout>