<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_unsupported_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_unsupported_title"
        android:textStyle="bold"
        android:textColor="@color/textBlack"
        android:padding="10dp"
        android:background="@color/backgroundWhite"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/lineDarkGrey"/>

    <ImageView
        android:id="@+id/dialog_unsupported_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/splash_exit"/>

    <TextView
        android:id="@+id/dialog_unsupported_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_unsupported_text"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/textDarkGrey"
        android:padding="10dp"
        android:background="@color/backgroundWhite"/>


</LinearLayout>
